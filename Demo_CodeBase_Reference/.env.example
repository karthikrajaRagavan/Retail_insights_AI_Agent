# Environment Configuration

# OpenAI (Required for PandasAI SQL generation, NeMo Guardrails, and Embeddings)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4.1"

# Google Cloud (Required for ADK agents with Gemini)
GOOGLE_SERVICE_ACCOUNT_FILE="service-account.json"
GOOGLE_CLOUD_PROJECT="your_gcp_project_id"
GOOGLE_CLOUD_LOCATION="global"

# Gemini Models
ORCHESTRATOR_MODEL="gemini-3-flash-preview"
PIPELINE_AGENT_MODEL="gemini-2.5-flash-lite-preview-09-2025"

# Pinecone (Knowledge Base Vector Store)
PINECONE_API_KEY="your_pinecone_api_key_here"
PINECONE_INDEX="your_pinecone_index_name"
PINECONE_HOST="https://your-index-host.pinecone.io"
PINECONE_NAMESPACE="candescent-retail-kb"

# Embeddings
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSIONS="1536"

# Document Chunking
CHUNK_SIZE="500"
CHUNK_OVERLAP="50"

# Retrieval
RETRIEVAL_TOP_K="5"
